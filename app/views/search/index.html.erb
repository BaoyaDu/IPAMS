<div class="row">
  <%# The header pagination: see https://github.com/bootstrap-ruby/will_paginate-bootstrap %>
  <div class="col-xs-8">
    <%= page_entries_info @results %><br />
    <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
  </div>
  <div class="col-xs-4">
    <%= form_tag search_index_path, :method => :get do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    <% end %>
  </div>
</div>

<div class="row">
<%# http://stackoverflow.com/questions/4566620/getting-the-current-item-number-or-index-when-using-will-paginate-in-rails-app
 See also https://hackhands.com/pagination-rails-will_paginate-gem/
 Record index: @addresses.total_entries, @addresses.offset %>
<% if @results %>
<table class="table table-striped table-condensed">
  <tbody>
  <% count = @results.offset + 1 %>
  <% @results.each do |re| %>
    <% who_am_i(re) %>
    <tr>
      <td><%= count %></td>
      <td><%= @model_name %></td>
    </tr>
    <% count += 1 %>
  <% end %>
  </tbody>
</table>
<% else %>
  <h4>Oooooops, nothing found!</h4>
<% end %>
</div>

<%# The footer pagination %>
<div class="col-xs-8">
  <%= page_entries_info @results %><br />
  <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
</div>
